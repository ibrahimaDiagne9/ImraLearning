{
    "$schema": "https://railway.app/v1.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "rootDirectory": "/backend"
    },
    "deploy": {
        "startCommand": "gunicorn imra_backend.wsgi",
        "releaseCommand": "python manage.py migrate",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 3
    }
}